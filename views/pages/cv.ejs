<%- include('../partials/header') %>

<div class="max-w-4xl mx-auto px-4 py-10">
    <div class="flex items-center gap-2 text-sm text-slate-500 mb-6">
        <a href="/dashboard" class="hover:text-blue-600">Inicio</a>
        <i class="ph-bold ph-caret-right"></i>
        <span>Hoja de Vida</span>
    </div>

    <div class="bg-white rounded-xl shadow border border-slate-200 p-8">
        <div class="border-b border-slate-100 pb-4 mb-6 flex justify-between items-center">
            <div>
                <h2 class="text-2xl font-bold text-slate-800">Hoja de Vida Funcionaria</h2>
                <p class="text-slate-500 text-sm">Registro histórico de actividad y sanciones.</p>
            </div>
            <button class="text-blue-600 hover:bg-blue-50 px-3 py-2 rounded text-sm font-medium transition">
                <i class="ph-bold ph-download-simple"></i> Descargar PDF
            </button>
        </div>

        <div class="space-y-6">
            <!-- Ejemplo de registro -->
            <div class="flex gap-4">
                <div class="flex flex-col items-center">
                    <div class="w-3 h-3 bg-emerald-500 rounded-full mt-1.5"></div>
                    <div class="w-0.5 h-full bg-slate-100 my-1"></div>
                </div>
                <div class="pb-6">
                    <p class="text-xs text-slate-400 font-mono"><%= new Date().toLocaleDateString() %></p>
                    <h4 class="font-bold text-slate-800">Inicio de Actividades</h4>
                    <p class="text-slate-600 text-sm mt-1">El funcionario ha ingresado al sistema judicial digital.</p>
                </div>
            </div>
            
            <div class="p-4 bg-slate-50 rounded text-center text-slate-400 text-sm italic">
                No hay más registros recientes en su hoja de vida.
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>