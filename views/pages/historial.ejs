<%- include('../partials/header') %>

<div class="max-w-4xl mx-auto px-4 py-10 min-h-screen">
    
    <div class="flex items-center gap-2 text-sm text-slate-500 mb-6">
        <a href="/dashboard" class="hover:text-blue-600 flex items-center gap-1">
            <i class="ph-bold ph-house"></i> Inicio
        </a>
        <i class="ph-bold ph-caret-right text-xs"></i>
        <span class="font-medium text-slate-900">Hoja de Vida</span>
    </div>

    <div class="flex flex-col md:flex-row md:items-center justify-between gap-4 mb-8 border-b border-slate-200 pb-6">
        <div>
            <h1 class="text-2xl font-bold text-slate-900">Hoja de Vida</h1>
            <p class="text-slate-500 mt-1">Registro oficial en Base de Datos Nacional.</p>
        </div>
        <div class="flex gap-2">
            <button class="flex items-center gap-2 px-4 py-2 text-sm font-medium text-slate-600 hover:bg-slate-50 rounded-lg transition-colors border border-slate-200">
                <i class="ph-bold ph-download-simple"></i> PDF
            </button>
        </div>
    </div>

    <% if (typeof error !== 'undefined' && error) { %>
        <div class="bg-yellow-50 border-l-4 border-yellow-400 p-4 mb-8 rounded-r">
            <div class="flex">
                <div class="flex-shrink-0">
                    <i class="ph-fill ph-warning text-yellow-500 text-xl"></i>
                </div>
                <div class="ml-3">
                    <h3 class="text-sm font-bold text-yellow-800">Acceso Limitado</h3>
                    <p class="text-sm text-yellow-700 mt-1">
                        Tu usuario de Discord no tiene un RUT vinculado en el sistema. 
                        Solicita a un administrador (Fiscalía) que actualice tu perfil de usuario.
                    </p>
                </div>
            </div>
        </div>
    <% } %>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
        <div class="<%= stats.cases > 0 ? 'bg-rose-50 border-rose-100 text-rose-700' : 'bg-emerald-50 border-emerald-100 text-emerald-700' %> p-5 rounded-xl border flex items-center justify-between transition-shadow hover:shadow-md">
            <div>
                <p class="text-xs font-bold uppercase tracking-wider opacity-80 mb-1">Causas Vigentes</p>
                <div class="flex items-baseline gap-2">
                    <span class="text-2xl font-bold"><%= stats.cases %></span>
                    <span class="text-xs font-medium opacity-80"><%= stats.cases > 0 ? 'Abiertas' : 'Sin pendientes' %></span>
                </div>
            </div>
            <div class="p-3 rounded-lg bg-white/50">
                <i class="ph-bold ph-gavel text-xl"></i>
            </div>
        </div>

        <div class="bg-slate-50 border-slate-100 text-slate-500 p-5 rounded-xl border flex items-center justify-between transition-shadow hover:shadow-md">
            <div>
                <p class="text-xs font-bold uppercase tracking-wider opacity-80 mb-1">Multas</p>
                <div class="flex items-baseline gap-2">
                    <span class="text-2xl font-bold text-slate-700">--</span>
                    <span class="text-xs font-medium opacity-80">Próximamente</span>
                </div>
            </div>
            <div class="p-3 rounded-lg bg-white/50">
                <i class="ph-bold ph-warning-octagon text-xl"></i>
            </div>
        </div>
    </div>

    <div class="space-y-4">
        <% if (records.length === 0) { %>
            <div class="py-16 text-center bg-slate-50 rounded-lg border border-dashed border-slate-200">
                <i class="ph-duotone ph-folder-notch-open text-4xl text-slate-300 mb-2"></i>
                <p class="text-slate-500 text-sm font-medium">No se encontraron registros recientes.</p>
                <p class="text-slate-400 text-xs">Tus causas asignadas aparecerán aquí.</p>
            </div>
        <% } else { %>
            <% records.forEach(r => { %>
                <div class="group bg-white border border-slate-200 rounded-lg p-4 hover:border-blue-300 hover:shadow-sm transition-all relative overflow-hidden flex flex-col md:flex-row gap-4 items-start md:items-center">
                    
                    <div class="absolute left-0 top-0 bottom-0 w-1 <%= r.status === 'open' ? 'bg-rose-500' : 'bg-slate-300' %>"></div>
                    
                    <div class="flex-1 pl-3">
                        <div class="flex items-center gap-2 mb-1">
                            <span class="inline-flex items-center gap-1 px-2 py-0.5 rounded text-[10px] font-bold uppercase tracking-wide bg-purple-100 text-purple-700">
                                <i class="ph-bold ph-folder"></i> Causa
                            </span>
                            <span class="text-xs text-slate-400 font-mono"><%= r.date %></span>
                        </div>
                        <h3 class="text-base font-bold text-slate-800 group-hover:text-blue-700 transition-colors">
                            <%= r.title %>
                        </h3>
                        <p class="text-sm text-slate-600 mt-1 line-clamp-2"><%= r.description %></p>
                    </div>

                    <div class="pl-3 md:pl-0 flex flex-col items-end gap-2">
                        <span class="px-3 py-1 rounded-full text-xs font-bold border <%= r.status === 'open' ? 'bg-rose-50 text-rose-700 border-rose-100' : 'bg-slate-100 text-slate-600 border-slate-200' %>">
                            <%= r.status === 'open' ? 'VIGENTE' : 'CERRADA' %>
                        </span>
                    </div>
                </div>
            <% }) %>
        <% } %>
    </div>
</div>

<%- include('../partials/footer') %>