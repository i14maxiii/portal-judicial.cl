<%- include('../partials/header') %>

<div class="max-w-6xl mx-auto px-4 py-10">
    <div class="flex items-center gap-2 text-sm text-slate-500 mb-6">
        <a href="/dashboard" class="hover:text-blue-600">Inicio</a>
        <i class="ph-bold ph-caret-right"></i>
        <span>Administración</span>
        <i class="ph-bold ph-caret-right"></i>
        <span>Papelera de Reciclaje</span>
    </div>

    <div class="flex justify-between items-end mb-6">
        <div>
            <h2 class="text-2xl font-bold text-slate-800 flex items-center gap-2">
                <i class="ph-duotone ph-trash text-red-500"></i>
                Papelera de Causas
            </h2>
            <p class="text-slate-500">Gestión de causas eliminadas lógicamente.</p>
        </div>
    </div>

    <% if (deletedCauses.length === 0) { %>
        <div class="bg-slate-50 border border-slate-200 rounded-xl p-10 text-center">
            <i class="ph-duotone ph-check-circle text-4xl text-green-500 mb-3"></i>
            <h3 class="text-lg font-bold text-slate-700">Papelera Vacía</h3>
            <p class="text-slate-500">No hay causas pendientes de eliminación.</p>
        </div>
    <% } else { %>
        <div class="bg-white rounded-xl shadow-sm border border-slate-200 overflow-hidden">
            <table class="w-full text-left text-sm text-slate-600">
                <thead class="bg-slate-50 text-slate-800 font-bold border-b border-slate-200">
                    <tr>
                        <th class="px-6 py-4">RUC / RIT</th>
                        <th class="px-6 py-4">Imputado</th>
                        <th class="px-6 py-4">Descripción</th>
                        <th class="px-6 py-4 text-right">Acciones</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-slate-100">
                    <% deletedCauses.forEach(cause => { %>
                        <tr class="hover:bg-slate-50 transition">
                            <td class="px-6 py-4 font-mono">
                                <div class="font-bold text-slate-800"><%= cause.ruc %></div>
                                <div class="text-xs text-slate-400"><%= cause.rit || '-' %></div>
                            </td>
                            <td class="px-6 py-4"><%= cause.imputado_rut %></td>
                            <td class="px-6 py-4 truncate max-w-xs"><%= cause.descripcion %></td>
                            <td class="px-6 py-4">
                                <div class="flex justify-end gap-2">
                                    <!-- RESTAURAR -->
                                    <form action="/causes/restore" method="POST">
                                        <input type="hidden" name="cause_id" value="<%= cause.id %>">
                                        <button type="submit" class="flex items-center gap-1 px-3 py-1.5 bg-emerald-50 text-emerald-600 rounded hover:bg-emerald-600 hover:text-white transition text-xs font-bold border border-emerald-200 hover:border-emerald-600">
                                            <i class="ph-bold ph-arrow-u-up-left"></i> Restaurar
                                        </button>
                                    </form>

                                    <!-- ELIMINAR DEFINITIVO -->
                                    <form action="/causes/destroy" method="POST" onsubmit="return confirm('⚠️ ¡ADVERTENCIA!\nEsta acción es irreversible.\n¿Eliminar permanentemente de la base de datos?');">
                                        <input type="hidden" name="cause_id" value="<%= cause.id %>">
                                        <button type="submit" class="flex items-center gap-1 px-3 py-1.5 bg-red-50 text-red-600 rounded hover:bg-red-600 hover:text-white transition text-xs font-bold border border-red-200 hover:border-red-600">
                                            <i class="ph-bold ph-x"></i> Eliminar
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    <% } %>
</div>

<%- include('../partials/footer') %>