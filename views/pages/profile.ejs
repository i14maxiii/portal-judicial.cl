<%- include('../partials/header') %>

<div class="max-w-4xl mx-auto px-4 py-10">
    <div class="flex items-center gap-2 text-sm text-slate-500 mb-6">
        <a href="/dashboard" class="hover:text-blue-600">Inicio</a>
        <i class="ph-bold ph-caret-right"></i>
        <span>Mi Perfil</span>
    </div>

    <div class="bg-white rounded-xl shadow border border-slate-200 overflow-hidden">
        <div class="h-32 bg-slate-800 relative">
            <div class="absolute -bottom-12 left-8">
                <% if (user.avatar) { %>
                    <img class="h-24 w-24 rounded-full border-4 border-white shadow-md" 
                         src="https://cdn.discordapp.com/avatars/<%= user.discord_id %>/<%= user.avatar %>.png" alt="">
                <% } else { %>
                    <div class="h-24 w-24 rounded-full border-4 border-white bg-blue-600 flex items-center justify-center shadow-md">
                        <i class="ph-bold ph-user text-3xl text-white"></i>
                    </div>
                <% } %>
            </div>
        </div>
        
        <div class="pt-16 pb-8 px-8">
            <h1 class="text-2xl font-bold text-slate-800"><%= user.username %></h1>
            <p class="text-slate-500">ID Discord: <%= user.discord_id %></p>
            <div class="mt-4 flex gap-2">
                <span class="px-3 py-1 bg-blue-100 text-blue-700 text-xs font-bold rounded-full uppercase">Funcionario Activo</span>
                <span class="px-3 py-1 bg-slate-100 text-slate-700 text-xs font-bold rounded-full uppercase">Rol: <%= user.role || 'EstÃ¡ndar' %></span>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>