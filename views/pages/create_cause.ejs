<%- include('../partials/header') %>

<div class="max-w-3xl mx-auto px-4 py-10">
    
    <!-- Breadcrumb -->
    <div class="flex items-center gap-2 text-sm text-slate-500 mb-6">
        <a href="/dashboard" class="hover:text-blue-600">Inicio</a>
        <i class="ph-bold ph-caret-right"></i>
        <span>Ingresar Causa</span>
    </div>

    <div class="bg-white rounded-xl shadow-lg border border-slate-200 overflow-hidden">
        <div class="bg-slate-50 px-8 py-6 border-b border-slate-200">
            <h2 class="text-2xl font-bold text-slate-800 flex items-center gap-3">
                <i class="ph-duotone ph-gavel text-blue-600"></i>
                Apertura de Investigación
            </h2>
            <p class="text-slate-500 mt-1">El RUC será generado automáticamente por el sistema.</p>
        </div>

        <form action="/causes/create" method="POST" class="p-8 space-y-6">
            
            <!-- Sección Imputado -->
            <div>
                <label class="block text-sm font-bold text-slate-700 mb-2">Imputado (RUT)</label>
                <div class="relative">
                    <input type="text" name="imputado_rut" placeholder="Ej: 12.345.678-9" required
                           class="w-full pl-10 pr-4 py-3 border border-slate-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none transition">
                    <i class="ph-bold ph-user absolute left-3 top-3.5 text-slate-400"></i>
                </div>
                <p class="text-xs text-slate-400 mt-1">Si el imputado no existe en la base civil, regístrelo primero.</p>
            </div>

            <!-- Sección Datos Causa -->
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <label class="block text-sm font-bold text-slate-700 mb-2">RIT (Tribunal)</label>
                    <div class="relative">
                        <input type="text" name="rit" placeholder="Ej: 505-2023 (Opcional)" 
                               class="w-full pl-10 pr-4 py-3 border border-slate-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none transition">
                        <i class="ph-bold ph-files absolute left-3 top-3.5 text-slate-400"></i>
                    </div>
                </div>
                <div>
                    <label class="block text-sm font-bold text-slate-700 mb-2">Fiscal Asignado</label>
                    <input type="text" value="<%= user.username %>" disabled
                           class="w-full px-4 py-3 bg-slate-100 border border-slate-300 rounded-lg text-slate-500 cursor-not-allowed">
                </div>
            </div>

            <!-- Descripción -->
            <div>
                <label class="block text-sm font-bold text-slate-700 mb-2">Descripción de los Hechos / Delitos</label>
                <textarea name="descripcion" rows="5" required placeholder="Describa detalladamente los hechos, delitos imputados y circunstancias..."
                          class="w-full px-4 py-3 border border-slate-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none transition"></textarea>
            </div>

            <!-- Botones -->
            <div class="pt-4 flex items-center justify-end gap-4 border-t border-slate-100 mt-6">
                <a href="/dashboard" class="px-6 py-2 text-slate-600 font-medium hover:text-slate-800 transition">Cancelar</a>
                <button type="submit" class="px-6 py-3 bg-blue-600 hover:bg-blue-700 text-white font-bold rounded-lg shadow-md hover:shadow-lg transition flex items-center gap-2">
                    <i class="ph-bold ph-floppy-disk"></i>
                    Ingresar Causa
                </button>
            </div>

        </form>
    </div>
</div>

<%- include('../partials/footer') %>